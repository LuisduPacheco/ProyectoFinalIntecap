<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAVerProductos"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver productos"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30sp"
        android:textColor="#204D7D"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:elevation="10sp"
        app:cardElevation="10sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="15sp"
        android:padding="10sp"
        android:backgroundTint="#E1F5FE"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgVerProduct"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/ic_launcher_background"
                android:layout_margin="10sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txtVerNombreProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Producto"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="5sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txtVerCantidadProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad Producto"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="5sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>